.main-content
  .container
  %h1 Edit Profile
  %hr/
  .row
    .col-md-3
      .text-center
        .profile-avatar
          - if current_user.avatar.attached?
            = image_tag "#{url_for(current_user.avatar)}" 
          - else
            = image_tag "https://cdn1.iconfinder.com/data/icons/rcons-user-action/512/user-512.png" 
        %h3
          %strong.user_name
            #{current_user.full_name}
    .col-md-9.personal-info
      = form_for current_user, url: account_profile_path, html: { method: :put } do |f|
        = render 'shared/dashboard/error_messages'
        .form-group
          = f.label :first_name, class: 'control-label'
          = f.text_field :first_name, class: 'form-control'
        .form-group
          = f.label :last_name, class: 'control-label'
          = f.text_field :last_name, class: 'form-control'
        .form-group
          = f.label :email, class: 'control-label'
          = f.email_field :email, class: 'form-control'
        .form-group
          = f.label 'Profile photo'
          = f.file_field :avatar
        .form-group
          = f.submit "Save changes", class: "submit-button btn btn-large btn-primary"
      = form_for current_user, url: account_profile_path, html: { method: :put } do |f|
        .form-group
          = f.label :password, class: 'control-label'
          = f.password_field :password, class: 'form-control'
        .form-group
          = f.label :password_confirmation, class: 'control-label'
          = f.password_field :password_confirmation, class: 'form-control'
        .form-group
          = f.submit "Change password", class: "submit-button btn btn-large btn-primary" 
%hr/
