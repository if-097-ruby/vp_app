<h2><%= t "devise.invitations.new.header" %></h2>

<%= simple_form_for(@user, url: user_invitation_path, html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <% @user.class.invite_key_fields.each do |field| -%>
    <div class="form-inputs">
      <%= f.input :first_name, input_html: { maxlength: 50 } %>
      <%= f.input :last_name, input_html: { maxlength: 50 } %>
      <%= f.input :email %>
    </div>
  <% end -%>

  <div class="form-actions">
    <%= f.button :submit, t("devise.invitations.new.submit_button") %>
  </div>
<% end %>
