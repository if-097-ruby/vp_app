.col-xl-6.col-12
  .box-content
    %h4.box-title Users
    / /.box-title
    %table.table.table-striped.margin-bottom-10
      %thead
        %tr
          %th{:style => "width:40%;"} Name
          %th E-mail
          %th Options
      %tbody
      - @users.each do |user|
        %tr
          %td 
            - if user.role == 'admin'
              #{user.first_name} (admin)
            - else
              = user.first_name
          %td 
            = user.email
          %td
            - if user.role == 'member' 
              = link_to "Delete", account_user_path(user), method: :delete, data: {confirm: "Are you sure?"}
  = link_to 'Add new member', new_account_user_path, class: "btn btn-primary waves-effect waves-light" 