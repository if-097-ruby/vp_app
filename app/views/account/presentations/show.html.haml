%head
  %link{href: "https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css", rel: "stylesheet"}
%body
  .container
    #myCarousel.carousel.slide{"data-ride" => "carousel"}
      / Indicators
      %ol.carousel-indicators
        - @presentation.slides.each do |slide|
          %li{"data-slide-to" => slide.image, "data-target" => "#myCarousel"}
      / Wrapper for slides
      .carousel-inner
        - if @presentation.slides.first.image_url
          - @presentation.slides.each do |slide|
            %div{class: "item #{'active' if slide.image == @presentation.slides.first.image}"}
              = image_tag slide.image_url
      %a.left.carousel-control{"data-slide" => "prev", href: "#myCarousel"}
        / %span.glyphicon.glyphicon-chevron-left
        %span.sr-only Previous
      %a.right.carousel-control{"data-slide" => "next", href: "#myCarousel"}
        %span.glyphicon.glyphicon-chevron-right
        %span.sr-only Next