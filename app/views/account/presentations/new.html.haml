.col-xl-6.col-12
  .box-content.card.white
    %h4.box-title Add new presentation
    .card-content
      .form-group
      = simple_form_for [:account, @presentation] do |f|
        .form-group
          = f.input :name, input_html: { maxlength: 50 }
        .form-group
          = f.file_field :attachment, class: "btn-primary"
        .form-group      
        = f.button :submit, "Submit", class: "btn btn-primary waves-effect waves-light"